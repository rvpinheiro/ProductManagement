@model ProductManagement.Models.Product

@{
    ViewBag.Title = "Adicionar Produto";
}

<h2 class="my-4 text-center">@ViewBag.Title</h2>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Informações do Produto</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Nome do produto" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Descrição do produto"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" placeholder="Preço do produto" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-start mt-3">
                    <button type="submit" class="btn btn-primary mr-2">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
