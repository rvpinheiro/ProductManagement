@model IEnumerable<ProductManagement.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })">Edit</a> |
                        <a href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
