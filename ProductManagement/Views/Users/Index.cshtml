@model IEnumerable<(Microsoft.AspNetCore.Identity.IdentityUser User, bool IsAdmin)>
@using System.Security.Claims

@{
    ViewBag.Title = "Lista de utilizadores";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier); // Obtém o ID do utilizador logado
}

<h2>Lista de Usuários</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Nome de utilizador</th>
            <th>Papel</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var (User, IsAdmin) in Model)
        {
            <tr>
                <td>@User.Email</td>
                <td>@User.UserName</td>
                <td>@(IsAdmin ? "Admin" : "Regular")</td>
                <td>
                    @if (User.Id != currentUserId) // Verifica se não é o utilizador logado
                    {
                        <form method="post" asp-action="ToggleAdminRole" asp-route-userId="@User.Id" asp-route-makeAdmin="@(!IsAdmin)">
                            <button type="submit" class="btn @(IsAdmin ? "btn-danger" : "btn-success")">
                                @(IsAdmin ? "Tornar Regular" : "Tornar Admin")
                            </button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">Não pode alterar seu próprio papel.</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
